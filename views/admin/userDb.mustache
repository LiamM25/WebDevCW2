{{> header }}
{{> admin/adminNav}}

<div class="container my-5">
  <h1 class="text-center mb-4">User Database</h1>

  <!-- User database table -->
  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#users}}
        <tr>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{role}}</td>
          <td>
            <form action="/admin/deleteUser" method="POST">
              <input type="hidden" name="userId" value="{{_id}}">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        {{/users}}
      </tbody>
    </table>
  </div>
</div>

{{> footer }}